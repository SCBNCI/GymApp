<h1>Group Classes</h1> 

<!-- Button to navigate to the form for creating a new group class -->
<%= link_to "New Group Class (Staff Only)", new_group_class_path, class: "button new-group-class" %>

<!-- Table to display all group classes -->
<table id="table">
  <tr>
    <th>Staff</th>
    <th>Class Type</th>
    <th>Date</th>
    <th>Time</th>
    <th>Actions</th>
  </tr>

  <!-- Loop through each group class and create a table row for it -->
  <% @group_classes.each do |group_class| %>
    <tr>
      <% if group_class.gym_staff %>
        <td><%= group_class.gym_staff.first_name %> <%= group_class.gym_staff.last_name %></td>
      <% else %>
        <td>Staff not assigned</td>
      <% end %>
      <td><%= group_class.class_type.present? ? group_class.class_type : "Not specified" %></td>
      <td><%= group_class.date.strftime("%d %b %Y") %></td>
      <td><%= group_class.time.strftime("%H:%M") %></td>

      <!-- Action buttons for interacting with the group class -->
      <td>
        <%= link_to "More Information", group_class_path(group_class), class: "button" %>
        <%= link_to "Edit", edit_group_class_path(group_class), class: "button edit" %>
        <%= link_to "Book", book_group_class_path(group_class), class: "button book" %>
      </td>
    </tr>
  <% end %>
</table>
