<div class="form-container">
  <h1>Group Class Details</h1>

  <!-- Section displaying detailed information about the group class -->
  <div class="details-section">
    <p><strong>Staff:</strong> <%= @group_class.gym_staff.first_name %> <%= @group_class.gym_staff.last_name %></p>
    <p><strong>Date:</strong> <%= @group_class.date.strftime("%d %b %Y") %></p>
    <p><strong>Time:</strong> <%= @group_class.time.strftime("%H:%M") %></p>
    <p><strong>Class Type:</strong> <%= @group_class.class_type %></p>
    <p><strong>Description:</strong> <%= @group_class.class_description %></p>
  </div>

  <!-- Form for deleting the group class -->
  <%= form_with(model: @group_class, url: group_class_path(@group_class), method: :delete, html: { onsubmit: "return confirm('Are you sure you want to delete this class?');" }) do %>
    <!-- Submit button to delete the group class -->
    <%= submit_tag "Delete this group class", class: "button delete" %>
  <% end %>

  <!-- Link to navigate back to the list of group classes -->
  <%= link_to "Back to Group Classes", group_class_index_path, class: "link-back" %>

</div>
