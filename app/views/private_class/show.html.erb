<div class="form-container">
  <h1>Private Class Details</h1>

  <!-- Section displaying details of the private class -->
  <div class="details-section">
    <p><strong>Staff:</strong> <%= @private_class.gym_staff.first_name %> <%= @private_class.gym_staff.last_name %></p>
    <p><strong>Member:</strong> <%= @private_class.gym_member.first_name %> <%= @private_class.gym_member.last_name %></p>
    <p><strong>Date:</strong> <%= @private_class.date.strftime("%d %b %Y") %></p>
    <p><strong>Time:</strong> <%= @private_class.time.strftime("%H:%M") %></p>
    <p><strong>Class Type:</strong> Private Class</p>
    <p><strong>Description:</strong> This is a Private Class with a Personal Trainer.</p>
  </div>

  <!-- Form for deleting the private class -->
  <%= form_with(model: @private_class, url: private_class_path(@private_class), method: :delete, html: { onsubmit: "return confirm('Are you sure you want to delete this class?');" }) do %>
    <!-- Submit button to delete the private class -->
    <%= submit_tag "Delete this private class", class: "button delete" %>
  <% end %>

<!-- Link to navigate back to the list of private classes -->
<%= link_to "Back to Private Classes", private_class_index_path, class: "link-back" %>

</div>
